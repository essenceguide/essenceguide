{{#content_pagination}}
&lt;div class=&quot;content-pagination&quot;&gt;
  {{#prev_link}}
  &lt;div class=&quot;content-pagination__link content-pagination__link--prev&quot;&gt;
    &lt;a class=&quot;content-pagination__wrap&quot; href=&quot;{{url}}&quot;&gt;
      &lt;div class=&quot;content-pagination__link-image&quot;&gt;
        &lt;img src=&quot;{{image_src}}&quot; alt=&quot;{{title}}&quot;&gt;
      &lt;/div&gt;
      &lt;div class=&quot;content-pagination__link-text&quot;&gt;
        &lt;span class=&quot;content-pagination__link-direction&quot;&gt;Previous&lt;/span&gt;
        &lt;span class=&quot;content-pagination__link-title&quot;&gt;{{title}}&lt;/span&gt;
      &lt;/div&gt;
      &lt;div class=&quot;content-pagination__link-arrow&quot;&gt;&lt;/div&gt;
    &lt;/a&gt;
  &lt;/div&gt;
  {{/prev_link}}
  {{#next_link}}
  &lt;div class=&quot;content-pagination__link content-pagination__link--next&quot;&gt;
    &lt;a class=&quot;content-pagination__wrap&quot; href=&quot;{{url}}&quot;&gt;
      &lt;div class=&quot;content-pagination__link-text&quot;&gt;
        &lt;span class=&quot;content-pagination__link-direction&quot;&gt;Next&lt;/span&gt;
        &lt;span class=&quot;content-pagination__link-title&quot;&gt;{{title}}&lt;/span&gt;
      &lt;/div&gt;
      &lt;div class=&quot;content-pagination__link-image&quot;&gt;
        &lt;img src=&quot;{{image_src}}&quot; alt=&quot;{{title}}&quot;&gt;
      &lt;/div&gt;
      &lt;div class=&quot;content-pagination__link-arrow&quot;&gt;&lt;/div&gt;
    &lt;/a&gt;
  &lt;/div&gt;
  {{/next_link}}
&lt;/div&gt;
{{/content_pagination}}