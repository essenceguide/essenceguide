{{!
*
* Byline List Module
*
* @param string avatar     String of image url
* @param string img_alt String of text for image alternate text
* @param string author_name    String of text for title of related list item
*
* @param string author_url     String for url source, is optional.
* @param string date    String of text to display date, is optional.
*
}}

{{#byline}}
  {{#avatar}}
  &lt;div class=&quot;byline__media&quot;&gt;
    &lt;img class=&quot;byline__media-img&quot; src=&quot;{{avatar}}&quot; alt=&quot;{{img_alt}}&quot;&gt;
  &lt;/div&gt;
  {{/avatar}}
  &lt;div class=&quot;byline__info&quot;&gt;
    &lt;div class=&quot;byline__text&quot;&gt;
      By
      {{#authors}}
        {{#author_url}}
        &lt;a class=&quot;byline byline__name&quot; href=&quot;{{author_url}}&quot;&gt;{{author_name}}&lt;/a&gt;
        {{/author_url}}
        {{^author_url}}
        &lt;span class=&quot;byline__name&quot;&gt;{{author_name}}&lt;/span&gt;
        {{/author_url}}
      {{/authors}}
    &lt;/div&gt;
    {{#date}}
      &lt;div class=&quot;byline__date&quot;&gt;{{date}}&lt;/div&gt;
    {{/date}}
  &lt;/div&gt;
{{/byline}}